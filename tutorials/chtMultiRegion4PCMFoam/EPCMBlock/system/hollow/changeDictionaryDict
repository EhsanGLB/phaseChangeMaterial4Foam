FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      changePatchTypeDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dictionaryReplacement
{
    U
    {
        internalField   uniform (0 0.01 0);

        boundaryField
        {
            top
            {
                type            zeroGradient;
            }

            bottom
            {
                type            fixedValue;
                value           uniform (0 0.01 0);
            }

            hollow_to_block
            {
                type            fixedValue;
                value           uniform (0 0 0);
            }
        }
    }

    /*U
